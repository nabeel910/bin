#! /bin/sh

currentlevel=$(pamixer --get-volume-human)
mutestatus=$(pamixer --get-mute)

if [ $currentlevel = 0% ];
then
	echo " ïª€  Muted " 
	#echo " ğŸ”‡ Muted " 

elif [ $mutestatus = true ];
then
	echo "ïª€ Muted " && dunstify -r 1 " ïª€  Muted " 
	#echo "ğŸ”‡ Muted " && dunstify -u low -t 1500 -r 1 "ğŸ”‡ Muted " 

elif [ "$(echo "$currentlevel" | tr -d "%")" -le " 50" ];
then
	echo " ï€§ $currentlevel " && dunstify -r 1 "Volume ï€§ $currentlevel" 
	#echo "ğŸ”‰ $currentlevel " && dunstify -u low -t 1500 -r 1 "Volume ğŸ”‰ $currentlevel" 


elif [ "$(echo "$currentlevel" | tr -d "%")" -ge " 50" ];
then
	echo " ï€¨  $currentlevel " && dunstify -r 1 "Volume ï€¨  $currentlevel" 
	#echo "ğŸ”Š $currentlevel " && dunstify -u low -t 1500 -r 1 "Volume ğŸ”Š $currentlevel" 


fi
