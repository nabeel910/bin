#!/bin/sh
percentage=$(xbacklight -g | sed "s/\..*//")


if [ "$(xbacklight -g)" = "100.00" ];
then
	dunstify -u low -t 1500 -r 3 "Backlight ï†…  100%"  
	#dunstify -u low -t 1500 -r 3 "ðŸ”† 100%"  
else
	dunstify -u low -t 1500 -r 3 "Backlight ï†…  $percentage%"
	#dunstify -u low -t 1500 -r 3 "ðŸ”† $percentage%"
fi

kill -44 $(pidof dwmblocks)
